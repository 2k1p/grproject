<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF6F61"
        android:gravity="center"
        android:text="알고가"
        android:textColor="#EEE6E6"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView2"
        android:src="@drawable/logo_1" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <ImageButton android:id="@+id/find_cafe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1.5dp"
            android:background="#FCFF6F61"
            android:src="@drawable/ic_free_breakfast_black_24dp" />

        <ImageButton android:id="@+id/dss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1.5dp"
            android:background="#FCFF6F61"
            android:src="@drawable/ic_wb_incandescent_black_24dp"/>

        <ImageButton android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1.5dp"
            android:background="#FCFF6F61"
            android:src="@drawable/ic_notifications_black_24dp" />

        <ImageButton android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1.5dp"
            android:background="#FCFF6F61"
            android:src="@drawable/ic_people_black_24dp" />
    </LinearLayout>


</RelativeLayout>
