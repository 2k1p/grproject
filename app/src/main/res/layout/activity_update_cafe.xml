<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager.CafeManager2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/CafeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_background"
            android:hint="업체명"
            android:padding="10dp" />

        <EditText
            android:id="@+id/CafeEdit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_background"
            android:hint="주소"
            android:padding="10dp" />


        <EditText
            android:id="@+id/CafeEdit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_background"
            android:hint="전화번호"
            android:padding="10dp" />

        <EditText
            android:id="@+id/CafeEdit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_background"
            android:digits="0123456789."
            android:hint="영업시간"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/CafeEdit5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_background"
            android:digits="0123456789"
            android:hint="와이파이"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/CafeEdit6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_background"
            android:digits="0123456789"
            android:hint="좌석 수"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/CafeEdit7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_background"
            android:digits="0123456789"
            android:hint="콘센트"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/CafeEdit8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_background"
            android:digits="0123456789"
            android:hint="최소가격"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="수정"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="삭제"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>